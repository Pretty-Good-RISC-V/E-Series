{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "base",
        "displayName": "Base Config",
        "hidden": true,
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "environment": {
          "CTEST_OUTPUT_ON_FAILURE": "True"
        },
        "cacheVariables": {
          "BUILD_PRESET" : {
            "type": "STRING",
            "value": "${presetName}"
          }
        }
      },
      {
        "name": "E100_32I",
        "displayName": "E100 (RV32I)",
        "inherits": "base",
        "cacheVariables": {
          "BASE_ISA": {
            "type": "STRING",
            "value": "RV32"
          }
        }
      },
      {
        "name": "E100_32IC",
        "displayName": "E100 (RV32IC)",
        "inherits": "base",
        "cacheVariables": {
          "BASE_ISA": {
            "type": "STRING",
            "value": "RV32"
          },
          "EXT_C": {
            "type": "STRING",
            "value": "EXT_C"
          }
        }
      },
      {
        "name": "E100E_64",
        "displayName": "E100 (RV64I)",
        "inherits": "base",
        "cacheVariables": {
          "BASE_ISA": {
            "type": "STRING",
            "value": "RV64"
          }
        }
      },
      {
        "name": "E100_64IC",
        "displayName": "E100 (RV64IC)",
        "inherits": "base",
        "cacheVariables": {
          "BASE_ISA": {
            "type": "STRING",
            "value": "RV64"
          },
          "EXT_C": {
            "type": "STRING",
            "value": "EXT_C"
          }
       }
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "configurePreset": "default"
      }
    ],
    "testPresets": [
      {
        "name": "default",
        "configurePreset": "default",
        "output": {
          "outputOnFailure": true
        },
        "execution": {
          "noTestsAction": "error",
          "stopOnFailure": true
        }
      }
    ],
    "vendor": {
      "example.com/ExampleIDE/1.0": {
        "autoFormat": false
      }
    }
  }